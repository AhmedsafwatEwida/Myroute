<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="pioneers.safwat.myroute"
    tools:context=".Routeboxlocation9">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        mapbox:style_url="@string/style_mapbox_streets"
        android:layout_height="match_parent" >

    </com.mapbox.mapboxsdk.maps.MapView>

    <Spinner
        android:id="@+id/saved_route_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/spinner_bg"
        android:gravity="center"
        android:popupBackground="#a1d6e2"
        android:spinnerMode="dropdown"
        android:textColorHint="#bcbabe"
        android:textSize="30sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/route_toggle_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="475dp"
        android:clickable="false"
        app:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/ic_my_location_24dp"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/routetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="175dp"
        android:layout_marginTop="485dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Route Name"
        android:visibility="invisible" />

</RelativeLayout>